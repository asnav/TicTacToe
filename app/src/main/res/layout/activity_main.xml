<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/playerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player One (x)"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/playerOneScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/playerOne"
        app:layout_constraintLeft_toLeftOf="@id/playerOne" />

    <TextView
        android:id="@+id/playerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Two (O)"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/playerTwoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginRight="60dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/playerTwo"
        app:layout_constraintRight_toRightOf="@id/playerTwo" />

    <Button
        android:id="@+id/topLeftSpot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/playerOneScore"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/topCenterSpot"
        android:backgroundTint="#AAB5B5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"/>
    <Button
        android:id="@+id/topCenterSpot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/playerOneScore"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/topLeftSpot"
        app:layout_constraintRight_toLeftOf="@+id/topRightSpot"
        android:backgroundTint="#AAB5B5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"/>
    <Button
        android:id="@+id/topRightSpot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/playerOneScore"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/topCenterSpot"
        android:backgroundTint="#AAB5B5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"/>


    <Button
        android:id="@+id/centerLeftSpot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/topLeftSpot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/topCenterSpot"
        android:backgroundTint="#AAB5B5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"/>
    <Button
        android:id="@+id/centerCenterSpot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/topCenterSpot"
        app:layout_constraintLeft_toRightOf="@id/topLeftSpot"
        app:layout_constraintRight_toLeftOf="@+id/topRightSpot"
        android:backgroundTint="#AAB5B5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"/>
    <Button
        android:id="@+id/centerRightSpot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/topRightSpot"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/topCenterSpot"
        android:backgroundTint="#AAB5B5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"/>

    <Button
        android:id="@+id/bottomLeftSpot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/centerLeftSpot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/topCenterSpot"
        android:backgroundTint="#AAB5B5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"/>
    <Button
        android:id="@+id/bottomCenterSpot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/centerCenterSpot"
        app:layout_constraintLeft_toRightOf="@id/topLeftSpot"
        app:layout_constraintRight_toLeftOf="@+id/topRightSpot"
        android:backgroundTint="#AAB5B5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"/>
    <Button
        android:id="@+id/bottomRightSpot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/centerRightSpot"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/topCenterSpot"
        android:backgroundTint="#AAB5B5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"/>


    <Button
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/bottomCenterSpot"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="#FF5300"
        android:textColor="#FFFFFF"
        android:text="CLEAR"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/clearButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>
